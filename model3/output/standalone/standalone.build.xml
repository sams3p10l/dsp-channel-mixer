			<arg value="-D_TOOLS_VERSION_=0x0701"/>
			<arg value="-D_SLOT_=0"/>
			<arg value="-D_OVLY_=standalone"/>
			<arg value="-D_OVLY_REVISION_=020000"/>
			<arg value="-D_VERSION_=00"/>
