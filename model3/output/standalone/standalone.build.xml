			<arg value="-D_TARGET_FAMILY_=crystal32"/>
			<arg value="-D_MUI_VERSION_=020000"/>
			<arg value="-IC:/CirrusDSP/include/"/>
			<arg value="-IC:/CirrusDSP/include/dsplib/"/>
			<arg value="-ID:/dsp-channel-mixer/model3/inc/"/>
