		<delete file="D:/dsp-channel-mixer/model3/output/standalone/src/main.s"/>
		<exec executable="C:/CirrusDSP/bin/ccc2" failonerror="true" resultProperty="cccResult0">
			<env key="PATH" path="C:/CirrusDSP/bin/:${env.PATH}"/>
			<arg value="D:/dsp-channel-mixer/model3/src/main.c"/>
			<arg value="-S"/>
			<arg value="-ruf"/>
			<arg value="-fcse"/>
			<arg value="-fprc"/>
